{% extends 'base.html.twig' %}
{% block title %}Detail post{% endblock %}

{% block body %}
    <div class="container">
        <h1>{{ post.title }}</h1>
        <p>Created on {{ post.date|date('d/m/Y') }}</p>
        <div class="mb-4">
            <div class="card-body">
                <p>{{ post.article }}</p>
            </div>
        </div>
        <a href="{{ path('app_post') }}">Back to list</a>
    </div>
{% endblock %}
